{kernel, [
    {logger_level, info},
    {logger, [
      %% Console logger
      {handler, default, logger_std_h,
         #{formatter => {flatlog, #{
           map_depth => 3,
           term_depth => 50
          }}}
      },
      %% Disk logger for errors
      {handler, disk_log, logger_disk_log_h,
         #{config => #{
              file => "logs/error",
              type => wrap,
              max_no_files => 10,
              max_no_bytes => 52428800, % 10 x 5mb
           },
           level => error,
           formatter => {flatlog, #{
             map_depth => 3,
             term_depth => 50
           }}
          }
      }
    ]}
   ]}
  ].